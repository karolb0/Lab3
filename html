<script>
    function popupfunction(x) {
        document.getElementById('popup' + x).style.display = 'block';
        document.getElementById('fade' + x).style.display = 'block';
    }

    function popupclose(x) {
        document.getElementById('popup' + x).style.display = 'none';
        document.getElementById('fade' + x).style.display = 'none';
    }

    function additem(x) {
        document.getElementById('Intel Laptop' + x).style.display = 'block';
        document.getElementById('Ipad' + x).style.display = 'block';
        document.getElementById('Apple Pencil' + x).style.display = 'block';
        document.getElementById('Ipad Case' + x).style.display = 'block';
        document.getElementById('Screen Protector' + x).style.display = 'block';



        }
   
    function showcart(x) {
        document.getElementById('Intel Laptop' + x).style.display = 'none';
        document.getElementById('Ipad' + x).style.display = 'none';
        document.getElementById('Apple Pencil ' + x).style.display = 'none';
        document.getElementById('Ipad Case' + x).style.display = 'none';
        document.getElementById('Screen Protector' + x).style.display = 'none';

    }
   
</script>

